<p style="color: green"><%= notice %></p>

<h1>Matches Records</h1>

<div id="matches">
  <table>
    <tr>
      <th><strong>Player 1</strong></th>
      <th><strong>Player 2</strong></th>
      <th><strong>Result</strong></th>
    </tr>
    <% if @matches.present? %>
      <% @matches.each do |match| %>
        <%= render partial: "match", :locals => {:match => match} %>
      <% end %>
    <% else%>
     <tr>
       <td colspan="4"><i><center>Empty</center></i></td>
     </tr>
    <% end %>
  </table>
</div>

<div>
  <%= link_to "New match", new_match_path %> 
</div>

<div>
  <%= link_to "Back to ranks", users_path %>
</div>